{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}
{% block pageTitle %}All Products{% endblock %}
{% block body %}
<div class="row">
    {% for product in products %}
        <div class="col-2 card" style="width: 18rem;">
            <img class="card-img-top" src="{{ product.picture }}" style="max-width: 320px">
            <div class="card-body">
                <h5 class="card-title">{{ product.name }}</h5>
                <p class="card-text">{{ product.price | currency }} Credits</p>
                <a href="{{ url('product.detail', {product:  product.id}) }}" class="btn btn-primary">Details</a>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
