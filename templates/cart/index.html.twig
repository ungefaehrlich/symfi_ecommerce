{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}
{% block pageTitle %}Cart{% endblock %}

{% block body %}
    <div class="row">
        <div class="col"><h3>Items in Cart</h3></div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th width="10">Remove</th>
            <th>Name</th>
            <th>Price</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>🗑️</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price | currency  }} </td>
                <td>Credits</td>
            </tr>
        {% endfor %}
        <tr class="table-info">
            <td></td>
            <td><strong>Total</strong></td>
            <td><strong>{{ total | currency }}</strong></td>
            <td>Credits</td>

        </tr>
        </tbody>
    </table>
    <a class="btn btn-primary btn-lg" href="{{ url("order.checkout") }}"> 🛒 Checkout</a>

{% endblock %}
